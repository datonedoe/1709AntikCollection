<% include ../partials/header %>


<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%=collection.name%></h1>
   
        <div style="width: 30%; margin: 20px auto">
            <form action="/collections/<%= collection._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="collection[name]" value="<%= collection.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="collection[price]" value="<%= collection.price%>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="collection[image]" value="<%= collection.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="collection[description]" value="<%= collection.description%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                
            </form>
            
            <a href="/collections">Go Back</a>
        </div>
        
        
        
    </div>
    
    <% include ../partials/footer %>
</div>